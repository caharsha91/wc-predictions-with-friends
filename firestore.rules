rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function hasEmail() {
      return isSignedIn() && request.auth.token.email is string;
    }

    function rawEmail() {
      return hasEmail() ? request.auth.token.email : '__missing__';
    }

    function normalizedEmail() {
      return hasEmail() ? request.auth.token.email.lower() : '__missing__';
    }

    function isAllowlisted(leagueId) {
      return hasEmail()
        && (
          exists(
            /databases/$(database)/documents/leagues/$(leagueId)/members/$(rawEmail())
          )
          || exists(
            /databases/$(database)/documents/leagues/$(leagueId)/members/$(normalizedEmail())
          )
        );
    }

    function isAdmin(leagueId) {
      return hasEmail()
        && (
          (exists(
            /databases/$(database)/documents/leagues/$(leagueId)/members/$(rawEmail())
          )
            && get(
              /databases/$(database)/documents/leagues/$(leagueId)/members/$(rawEmail())
            ).data.isAdmin == true)
          || (exists(
            /databases/$(database)/documents/leagues/$(leagueId)/members/$(normalizedEmail())
          )
            && get(
              /databases/$(database)/documents/leagues/$(leagueId)/members/$(normalizedEmail())
            ).data.isAdmin == true)
        );
    }

    function isSelf(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isSelfEmail(email) {
      return hasEmail() && (rawEmail() == email || normalizedEmail() == email);
    }

    function isThemeOnlyUpdate() {
      return request.resource.data.diff(resource.data).affectedKeys().hasOnly(['theme']);
    }

    match /leagues/{leagueId} {
      allow read, write: if false;

      match /members/{email} {
        allow get: if isSelfEmail(email);
        allow list: if isAdmin(leagueId);
        allow create, update: if isAdmin(leagueId)
          || (isAllowlisted(leagueId) && isSelfEmail(email) && isThemeOnlyUpdate());
        allow delete: if isAdmin(leagueId);
      }

      match /picks/{userId} {
        allow get: if isAllowlisted(leagueId) && isSelf(userId);
        allow create, update: if isAllowlisted(leagueId)
          && isSelf(userId)
          && request.resource.data.userId == request.auth.uid;
      }

      match /bracket-group/{userId} {
        allow get: if isAllowlisted(leagueId) && isSelf(userId);
        allow create, update: if isAllowlisted(leagueId)
          && isSelf(userId)
          && request.resource.data.userId == request.auth.uid;
      }

      match /bracket-knockout/{userId} {
        allow get: if isAllowlisted(leagueId) && isSelf(userId);
        allow create, update: if isAllowlisted(leagueId)
          && isSelf(userId)
          && request.resource.data.userId == request.auth.uid;
      }
    }
  }
}
