{
  "name": "wc-predictions-with-friends",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "lint:tokens": "node scripts/checkThemeTokens.mjs",
    "lint:contrast": "node scripts/checkContrast.mjs",
    "lint:routes": "node scripts/checkLegacyRoutes.mjs",
    "build": "npm run lint:tokens && npm run lint:contrast && npm run lint:routes && tsc -b && vite build",
    "test": "npm run lint:tokens && npm run lint:contrast && npm run lint:routes && vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "preview": "vite preview",
    "update-matches": "node scripts/updateMatches.js",
    "update-leaderboard": "node --import tsx scripts/updateLeaderboard.ts",
    "demo:simulate": "node --import tsx scripts/simulateDemoUsers.ts",
    "backfill-member-uids": "node --import tsx scripts/backfillMemberUids.ts",
    "update-snapshots": "npm run update-matches && npm run update-leaderboard",
    "seed:prod": "tsx scripts/seedProd.ts"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.2",
    "@radix-ui/react-dialog": "^1.1.3",
    "@radix-ui/react-dropdown-menu": "^2.1.3",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^12.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "tailwind-merge": "^2.5.5",
    "write-excel-file": "^2.3.10"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "firebase-admin": "^13.6.0",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^2.1.9"
  }
}
